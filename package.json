{
    "name": "webpack2-es6-cssnext",
    "version": "0.0.1",
    "description": "Webpack 2 + ES6 (Babel) + CSSNext (PostCSS)",
    "main": "src/index.js",
    "author": "thomas.o.adriano@gmail.com",
    "license": "MIT",
    "scripts": {
        "build:dev": "rm -rdf ./build && mkdir build && webpack --colors --progress --display-error-details --config webpack/webpack-dev.config.js",
        "build:prod": "rm -rdf ./build && mkdir build && webpack --colors --progress --display-error-details --config webpack/webpack-prod.config.js",
        "start": "yarn run dist && http-server -p 8081 ./build",
        "startlive": "webpack-dev-server --colors --progress --hot --inline --host 0.0.0.0 --config webpack/webpack-dev.config.js"
    },
    "browserslist": [
        "last 3 versions"
    ],
    "dependencies": {
        "font-awesome": "^4.7.0",
        "jquery": "^3.2.1",
        "promise-polyfill": "^6.0.2"
    },
    "devDependencies": {
        "autoprefixer": "^7.1.1",
        "babel-core": "^6.25.0",
        "babel-loader": "^7.1.0",
        "babel-plugin-syntax-async-functions": "^6.13.0",
        "babel-plugin-syntax-dynamic-import": "^6.18.0",
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-plugin-transform-regenerator": "^6.24.1",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-es2015": "^6.24.1",
        "chunk-manifest-webpack-plugin": "^1.1.0",
        "css-loader": "^0.26.1",
        "extract-text-webpack-plugin": "^2.1.2",
        "file-loader": "^0.9.0",
        "html-loader": "^0.4.4",
        "html-webpack-plugin": "^2.28.0",
        "image-webpack-loader": "^3.3.1",
        "jshint": "^2.9.4",
        "jshint-loader": "^0.8.3",
        "normalize.css": "^5.0.0",
        "postcss-cssnext": "^2.11.0",
        "postcss-loader": "^2.0.6",
        "style-loader": "^0.13.1",
        "url-loader": "^0.5.7",
        "webpack": "^3.0.0",
        "webpack-dev-server": "^2.5.0"
    }
}
