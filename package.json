{
    "name": "webpack-3-template",
    "version": "1.0.0",
    "description": "Basic Webpack 3 template, optimized for caching and performance",
    "main": "src/index.js",
    "author": "thomas.o.adriano@gmail.com",
    "license": "MIT",
    "scripts": {
        "build:dev": "rm -rdf ./build && mkdir build && webpack --progress --display-error-details --config webpack/webpack-dev.config.js",
        "build:prod": "rm -rdf ./build && mkdir build && webpack --progress --display-error-details --config webpack/webpack-prod.config.js",
        "start": "yarn run build:prod && http-server -p 8081 ./build",
        "start:dev": "webpack-dev-server --progress --hot --inline --config webpack/webpack-dev.config.js",
        "test": "jasmine --config=jasmine.json",
        "test:e2e": "karma start"
    },
    "browserslist": [
        "last 3 versions"
    ],
    "dependencies": {
        "font-awesome": "^4.7.0",
        "jquery": "^3.2.1",
        "promise-polyfill": "^6.0.2"
    },
    "devDependencies": {
        "autoprefixer": "^7.1.1",
        "babel-core": "^6.25.0",
        "babel-loader": "^7.1.0",
        "babel-plugin-syntax-async-functions": "^6.13.0",
        "babel-plugin-syntax-dynamic-import": "^6.18.0",
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-plugin-transform-regenerator": "^6.24.1",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-es2015": "^6.24.1",
        "chunk-manifest-webpack-plugin": "^1.1.0",
        "css-loader": "^0.26.1",
        "extract-text-webpack-plugin": "^2.1.2",
        "favicons-webpack-plugin": "^0.0.7",
        "file-loader": "^0.9.0",
        "html-loader": "^0.4.4",
        "html-webpack-harddisk-plugin": "^0.1.0",
        "html-webpack-plugin": "^2.28.0",
        "image-webpack-loader": "^3.3.1",
        "jasmine": "^2.6.0",
        "jshint": "^2.9.4",
        "jshint-loader": "^0.8.3",
        "karma": "^1.7.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-firefox-launcher": "^1.0.1",
        "karma-ie-launcher": "^1.0.0",
        "karma-jasmine": "^1.1.0",
        "karma-opera-launcher": "^1.0.0",
        "karma-phantomjs-launcher": "^1.0.4",
        "karma-safari-launcher": "^1.0.0",
        "karma-webpack": "^2.0.4",
        "node-sass": "^4.5.3",
        "normalize.css": "^5.0.0",
        "postcss-cssnext": "^2.11.0",
        "postcss-import": "^10.0.0",
        "postcss-loader": "^2.0.6",
        "raw-loader": "^0.5.1",
        "sass-loader": "^6.0.6",
        "script-ext-html-webpack-plugin": "^1.8.3",
        "style-loader": "^0.13.1",
        "url-loader": "^0.5.7",
        "webpack": "^3.1.0",
        "webpack-chunk-hash": "^0.4.0",
        "webpack-dev-server": "^2.5.0",
        "webpack-merge": "^4.1.0"
    }
}
